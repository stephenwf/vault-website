{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./.build/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "paths": {
      "contentlayer/generated": ["./.contentlayer/generated"],
    }
  }
}
